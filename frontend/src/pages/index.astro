---
// Fetch experiences from backend API
const response = await fetch('http://localhost:8002/api/experiences');
const experiences = await response.json();
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stimulus Collective - Sensory Experiences in Basel</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: #2D2A26;
            background: #FFFAF8;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        header {
            text-align: center;
            padding: 3rem 0;
            border-bottom: 3px solid #F8E8E8;
            margin-bottom: 3rem;
        }

        h1 {
            font-size: 3rem;
            font-weight: 800;
            color: #E53935;
            margin-bottom: 1rem;
        }

        .tagline {
            font-size: 1.5rem;
            color: #666;
            font-style: italic;
        }

        .experiences {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }

        .card {
            background: white;
            border: 2px solid #E8E8E8;
            border-radius: 12px;
            padding: 2rem;
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-color: #E53935;
        }

        .card h2 {
            font-size: 1.5rem;
            color: #2D2A26;
            margin-bottom: 0.5rem;
        }

        .card .category {
            display: inline-block;
            background: #FFF3F0;
            color: #E53935;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 1rem;
            text-transform: uppercase;
        }

        .card .meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid #F0F0F0;
        }

        .card .price {
            font-size: 1.75rem;
            font-weight: 700;
            color: #E53935;
        }

        .card .duration {
            color: #666;
            font-size: 0.9rem;
        }

        .cta {
            background: #E53935;
            color: white;
            padding: 0.75rem 1.5rem;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 600;
            display: inline-block;
            margin-top: 1rem;
            transition: background 0.2s;
        }

        .cta:hover {
            background: #C62828;
        }

        footer {
            text-align: center;
            padding: 2rem;
            margin-top: 4rem;
            border-top: 2px solid #F8E8E8;
            color: #666;
        }

        @media (max-width: 768px) {
            h1 { font-size: 2rem; }
            .tagline { font-size: 1.25rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Stimulus Collective</h1>
            <p class="tagline">Sensory experiences in Basel that create lasting memories</p>
        </header>

        <div class="experiences">
            {experiences.map(exp => (
                <div class="card">
                    <span class="category">{exp.category}</span>
                    <h2>{exp.title}</h2>
                    <div class="meta">
                        <div>
                            <div class="price">â‚¬{exp.price}/person</div>
                            <div class="duration">{exp.duration}</div>
                        </div>
                    </div>
                    <a href={`/experiences/${exp.slug}`} class="cta">Explore â†’</a>
                </div>
            ))}
        </div>

        <footer>
            <p>Made with â™¥ in Basel ðŸ‡¨ðŸ‡­</p>
        </footer>
    </div>
</body>
</html>
