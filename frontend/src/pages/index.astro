    <script>
        // Carousel functionality
        const track = document.querySelector('.carousel-track');
        const messages = document.querySelectorAll('.whatsapp-message');
        const prevBtn = document.querySelector('.carousel-prev');
        const nextBtn = document.querySelector('.carousel-next');
        const dotsContainer = document.querySelector('.carousel-dots');

        let currentIndex = 0;
        const totalMessages = messages.length;

        // Create dots
        for (let i = 0; i < totalMessages; i++) {
            const dot = document.createElement('button');
            dot.classList.add('carousel-dot');
            if (i === 0) dot.classList.add('active');
            dot.addEventListener('click', () => goToSlide(i));
            dotsContainer.appendChild(dot);
        }

        const dots = document.querySelectorAll('.carousel-dot');

        function updateCarousel() {
            const offset = -currentIndex * (messages[0].offsetWidth + 32);
            track.style.transform = `translateX(${offset}px)`;

            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentIndex);
            });
        }

        function goToSlide(index) {
            currentIndex = index;
            updateCarousel();
        }

        function nextSlide() {
            currentIndex = (currentIndex + 1) % totalMessages;
            updateCarousel();
        }

        function prevSlide() {
            currentIndex = (currentIndex - 1 + totalMessages) % totalMessages;
            updateCarousel();
        }

        nextBtn.addEventListener('click', nextSlide);
        prevBtn.addEventListener('click', prevSlide);

        // Auto-advance carousel every 5 seconds
        setInterval(nextSlide, 5000);
    </script>
