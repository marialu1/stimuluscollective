---
// Dynamic experience page with AI-generated content

export async function getStaticPaths() {
  const response = await fetch('http://localhost:8000/api/experiences');
  const experiences = await response.json();

  return experiences.map(exp => ({
    params: { slug: exp.slug }
  }));
}

const { slug } = Astro.params;
const response = await fetch(`http://localhost:8000/api/experiences/${slug}`);
const exp = await response.json();
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{exp.title} - Stimulus Collective</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: #2D2A26;
            background: #FFFAF8;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 2rem;
            color: #E53935;
            text-decoration: none;
        }

        .back-link:hover { text-decoration: underline; }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2D2A26;
            margin-bottom: 0.5rem;
        }

        .tagline {
            font-size: 1.25rem;
            color: #666;
            font-style: italic;
            margin-bottom: 1.5rem;
        }

        .meta {
            display: flex;
            gap: 1.5rem;
            padding: 1rem 0;
            border-bottom: 2px solid #F8E8E8;
            margin-bottom: 2rem;
            color: #666;
        }

        .meta span {
            font-weight: 500;
        }

        .meta .price {
            color: #E53935;
            font-size: 1.25rem;
            font-weight: 700;
        }

        .stimulus-scores {
            background: white;
            border: 1px solid #E8E8E8;
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
        }

        .stimulus-scores h2 {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
            text-align: center;
            color: #2D2A26;
        }

        .scores-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 1rem;
        }

        .score {
            text-align: center;
        }

        .score-bar {
            height: 120px;
            background: #F0F0F0;
            border-radius: 6px;
            position: relative;
            overflow: hidden;
        }

        .score-fill {
            background: linear-gradient(180deg, #E53935 0%, #C62828 100%);
            position: absolute;
            bottom: 0;
            width: 100%;
            transition: height 0.3s ease;
        }

        .score-label {
            margin-top: 0.5rem;
            font-size: 0.9rem;
            font-weight: 500;
            text-transform: capitalize;
        }

        .score-value {
            font-size: 1.1rem;
            font-weight: 700;
            color: #E53935;
        }

        .description {
            font-size: 1.1rem;
            line-height: 1.8;
            margin: 2rem 0;
            white-space: pre-line;
        }

        .highlights {
            background: white;
            border: 1px solid #E8E8E8;
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
        }

        .highlights h2 {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .highlights ul {
            list-style: none;
            padding: 0;
        }

        .highlights li {
            padding: 0.75rem 0;
            padding-left: 2rem;
            position: relative;
        }

        .highlights li:before {
            content: "‚úì";
            position: absolute;
            left: 0;
            color: #E53935;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .cta {
            background: #E53935;
            color: white;
            padding: 1.25rem 2.5rem;
            text-decoration: none;
            border-radius: 8px;
            font-size: 1.25rem;
            font-weight: 600;
            display: inline-block;
            margin: 2rem 0;
            transition: background 0.2s, transform 0.2s;
        }

        .cta:hover {
            background: #C62828;
            transform: translateY(-2px);
        }

        footer {
            text-align: center;
            padding: 2rem;
            margin-top: 4rem;
            border-top: 2px solid #F8E8E8;
            color: #666;
        }

        @media (max-width: 768px) {
            .scores-grid {
                grid-template-columns: repeat(3, 1fr);
            }

            .meta {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="back-link">‚Üê Back to Experiences</a>

        <h1>{exp.title}</h1>
        <p class="tagline">{exp.tagline}</p>

        <div class="meta">
            <span class="price">‚Ç¨{exp.price}/person</span>
            <span>‚Ä¢</span>
            <span>{exp.duration}</span>
            <span>‚Ä¢</span>
            <span>{exp.group_size}</span>
            <span>‚Ä¢</span>
            <span>{exp.languages.join(', ')}</span>
        </div>

        <div class="stimulus-scores">
            <h2>Stimulus Scores‚Ñ¢</h2>
            <div class="scores-grid">
                <div class="score">
                    <div class="score-bar">
                        <div class="score-fill" style={`height: ${exp.stimulus_scores.taste * 10}%`}></div>
                    </div>
                    <div class="score-label">Taste</div>
                    <div class="score-value">{exp.stimulus_scores.taste}/10</div>
                </div>
                <div class="score">
                    <div class="score-bar">
                        <div class="score-fill" style={`height: ${exp.stimulus_scores.sight * 10}%`}></div>
                    </div>
                    <div class="score-label">Sight</div>
                    <div class="score-value">{exp.stimulus_scores.sight}/10</div>
                </div>
                <div class="score">
                    <div class="score-bar">
                        <div class="score-fill" style={`height: ${exp.stimulus_scores.sound * 10}%`}></div>
                    </div>
                    <div class="score-label">Sound</div>
                    <div class="score-value">{exp.stimulus_scores.sound}/10</div>
                </div>
                <div class="score">
                    <div class="score-bar">
                        <div class="score-fill" style={`height: ${exp.stimulus_scores.thought * 10}%`}></div>
                    </div>
                    <div class="score-label">Thought</div>
                    <div class="score-value">{exp.stimulus_scores.thought}/10</div>
                </div>
                <div class="score">
                    <div class="score-bar">
                        <div class="score-fill" style={`height: ${exp.stimulus_scores.connect * 10}%`}></div>
                    </div>
                    <div class="score-label">Connect</div>
                    <div class="score-value">{exp.stimulus_scores.connect}/10</div>
                </div>
            </div>
        </div>

        <div class="description">
            {exp.description}
        </div>

        <div class="highlights">
            <h2>What's Included</h2>
            <ul>
                {exp.highlights.map(h => <li>{h}</li>)}
            </ul>
        </div>

        <a href={exp.whatsapp_url} class="cta" target="_blank" rel="noopener noreferrer">
            Book via WhatsApp ‚Üí
        </a>

        <footer>
            <p>Made with ‚ô• in Basel üá®üá≠</p>
        </footer>
    </div>
</body>
</html>
