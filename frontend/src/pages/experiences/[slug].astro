    <script>
        // Animate circular progress gauges
        document.addEventListener('DOMContentLoaded', () => {
            const gauges = document.querySelectorAll('.gauge-circle');

            gauges.forEach((gauge, index) => {
                const score = parseFloat(gauge.dataset.score);
                const circle = gauge.querySelector('.gauge-progress');
                const radius = 54;
                const circumference = 2 * Math.PI * radius;

                circle.style.strokeDasharray = circumference;
                circle.style.strokeDashoffset = circumference;

                setTimeout(() => {
                    const offset = circumference - (score / 10) * circumference;
                    circle.style.strokeDashoffset = offset;
                }, index * 150);
            });
        });
    </script>

    <script>
        // Animate gauges on page load
        document.addEventListener('DOMContentLoaded', () => {
            const gauges = document.querySelectorAll('.gauge-svg');

            gauges.forEach((gauge, index) => {
                const score = parseFloat(gauge.dataset.score);
                const label = gauge.dataset.label;

                // Add scale marks and numbers
                const scaleMarks = gauge.querySelector('.scale-marks');
                const scaleNumbers = gauge.querySelector('.scale-numbers');

                for (let i = 0; i <= 10; i++) {
                    const angle = -90 + (i * 18); // 180 degrees total, 11 marks (0-10)
                    const radians = (angle * Math.PI) / 180;

                    // Tick marks
                    const x1 = 100 + 60 * Math.cos(radians);
                    const y1 = 95 + 60 * Math.sin(radians);
                    const x2 = 100 + 68 * Math.cos(radians);
                    const y2 = 95 + 68 * Math.sin(radians);

                    const mark = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                    mark.setAttribute('x1', x1);
                    mark.setAttribute('y1', y1);
                    mark.setAttribute('x2', x2);
                    mark.setAttribute('y2', y2);
                    scaleMarks.appendChild(mark);

                    // Numbers (only 0, 5, 10)
                    if (i % 5 === 0) {
                        const numX = 100 + 78 * Math.cos(radians);
                        const numY = 95 + 78 * Math.sin(radians) + 3;

                        const num = document.createElementNS('http://www.w3.org/2000/svg', 'text');
                        num.setAttribute('x', numX);
                        num.setAttribute('y', numY);
                        num.setAttribute('text-anchor', 'middle');
                        num.textContent = i;
                        scaleNumbers.appendChild(num);
                    }
                }

                // Animate after a delay
                setTimeout(() => {
                    // Animate needle
                    const needle = gauge.querySelector('.gauge-needle');
                    const needleAngle = -90 + (score * 18); // 0-10 scale to -90 to +90 degrees
                    needle.style.transform = `rotate(${needleAngle}deg)`;

                    // Animate arc fill
                    const fill = gauge.querySelector('.gauge-fill');
                    const arcLength = 204;
                    const fillAmount = arcLength - (arcLength * (score / 10));
                    fill.style.strokeDashoffset = fillAmount;

                    // Show value with counter animation
                    const valueText = gauge.querySelector('.gauge-value');
                    let currentValue = 0;
                    const duration = 1500;
                    const increment = score / (duration / 16);

                    const counter = setInterval(() => {
                        currentValue += increment;
                        if (currentValue >= score) {
                            currentValue = score;
                            clearInterval(counter);
                        }
                        valueText.textContent = currentValue.toFixed(1);
                    }, 16);
                }, index * 200); // Stagger animation
            });
        });
    </script>
