---
// Fetch about content from backend API
const response = await fetch('http://localhost:8002/api/about');
const about = await response.json();
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{about.title} - Stimulus Collective</title>
    <meta name="description" content={about.subtitle}>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Caveat:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">Stimulus Collective</a>
                <nav class="nav">
                    <a href="/experiences">Experiences</a>
                    <a href="/about" class="active">About</a>
                    <a href={about.whatsapp_url} class="header-cta">Book via WhatsApp</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">{about.title}</h1>
                <p class="hero-subtitle">{about.subtitle}</p>
            </div>
        </div>
    </section>

    <!-- About Content -->
    <section class="about-content">
        <div class="container">
            <div class="about-description">
                {about.description.split('\n\n').map(paragraph => (
                    <p>{paragraph.trim()}</p>
                ))}
            </div>

            <h2 class="values-title">How we work</h2>
            <div class="values-grid">
                {about.values.map(value => (
                    <div class="value-card">
                        <h3>{value.title}</h3>
                        <p>{value.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-text">Made in Basel</p>
                <p class="footer-links">
                    <a href={about.whatsapp_url}>WhatsApp</a>
                    <span>Â·</span>
                    <a href="mailto:hello@stimuluscollective.com">Email</a>
                </p>
            </div>
        </div>
    </footer>
</body>
</html>

<style>
    /* Same base styles as index.astro */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #2D2A26;
        background: #FFB3C6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* Header */
    .header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(255, 179, 198, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
    }

    .logo {
        font-family: 'Caveat', cursive;
        font-size: 38px;
        font-weight: 700;
        letter-spacing: 0;
        color: #D32F2F;
        text-shadow: 0.5px 0.5px 0 #D32F2F, -0.5px -0.5px 0 #D32F2F;
        text-decoration: none;
    }

    .nav {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .nav a {
        font-size: 15px;
        font-weight: 500;
        color: #2D2A26;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .nav a:hover,
    .nav a.active {
        color: #D32F2F;
    }

    .header-cta {
        font-family: 'Caveat', cursive;
        font-size: 20px;
        font-weight: 700;
        color: #FFB3C6 !important;
        background: #D32F2F;
        padding: 12px 24px;
        border: none;
        border-radius: 12px;
        transition: all 0.2s ease;
        transform: rotate(-1deg);
    }

    .header-cta:hover {
        background: #B71C1C;
        transform: rotate(0deg) translateY(-2px);
        box-shadow: 0 4px 12px rgba(211, 47, 47, 0.3);
    }

    /* Hero */
    .hero {
        padding: 80px 0 60px;
        background: #FFB3C6;
    }

    .hero-content {
        max-width: 640px;
    }

    .hero-title {
        font-size: 48px;
        font-weight: 700;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: #2D2A26;
        margin-bottom: 20px;
    }

    .hero-subtitle {
        font-size: 20px;
        line-height: 1.5;
        color: #666;
    }

    /* About Content */
    .about-content {
        padding: 80px 0;
    }

    .about-description {
        max-width: 800px;
        margin: 0 auto 80px;
        font-size: 18px;
        line-height: 1.8;
    }

    .about-description p {
        margin-bottom: 24px;
    }

    .values-title {
        font-size: 32px;
        font-weight: 600;
        letter-spacing: -0.02em;
        color: #2D2A26;
        margin-bottom: 48px;
        text-align: center;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 32px;
        max-width: 1000px;
        margin: 0 auto;
    }

    .value-card {
        background: white;
        padding: 32px;
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.06);
    }

    .value-card h3 {
        font-size: 20px;
        font-weight: 600;
        color: #D32F2F;
        margin-bottom: 12px;
    }

    .value-card p {
        color: #666;
        line-height: 1.6;
    }

    /* Footer */
    .footer {
        border-top: 1px solid rgba(0, 0, 0, 0.06);
        padding: 48px 0;
        background: #FFB3C6;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-text {
        font-size: 14px;
        color: #666;
    }

    .footer-links {
        font-size: 14px;
        color: #666;
    }

    .footer-links a {
        color: #2D2A26;
        transition: color 0.2s ease;
    }

    .footer-links a:hover {
        color: #D32F2F;
    }

    .footer-links span {
        margin: 0 8px;
        opacity: 0.3;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .nav {
            gap: 16px;
        }

        .nav a:not(.header-cta) {
            font-size: 14px;
        }

        .hero-title {
            font-size: 36px;
        }

        .values-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
